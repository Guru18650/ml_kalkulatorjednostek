            <Picker.Items>
                <x:String>Kilobajt</x:String>
                <x:String>Megabajt</x:String>
                <x:String>Gigabajt</x:String>
                <x:String>Terabajt</x:String>
            </Picker.Items>
        </Picker>

        <Button x:Name="calc" Text="Oblicz" Margin="0,15,0,0" Clicked="calc_Clicked"/>
    </VerticalStackLayout>
</ContentPage>