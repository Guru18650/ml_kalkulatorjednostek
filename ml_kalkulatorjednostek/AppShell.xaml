<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ml_kalkulatorjednostek.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ml_kalkulatorjednostek"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Pamięć" Icon="hd.png">
            <ShellContent ContentTemplate="{DataTemplate local:Pamiec}"/>
        </Tab>
        <Tab Title="Dane" Icon="in.png">
            <ShellContent ContentTemplate="{DataTemplate local:Dane}"/>
        </Tab>
        <Tab Title="Historia" Icon="time.png">
            <ShellContent ContentTemplate="{DataTemplate local:Historia}"/>
        </Tab>
    </TabBar>

</Shell>
